<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<% if (errors) { %>
    <ul class="notice">
<% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
<%  }) %>
</ul>
<% } %>

<div id="container-register-classification">
    <p>Provide the name of the new classification</p>
    <form method="post" class="expand-data" action="/inv/addingClassification">
        <label class="require" for="classification_name">Classification Name: </label>
        <input
            type="text"
            name="classification_name"
            id="classification_name"
            required
            title="classification_name"
            placeholder="sport"
            value="<%= locals.classification_name %>"/>
        <input
            type="submit"
            id="button-submit"
            name="submit"
            value="Add Classification"/>
    </form>
</div>