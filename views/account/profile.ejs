<% if (title) { %>
    <h1 id="login-head"><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<% if (errors) { %>
    <ul class="notice">
<% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
<%  }) %>
</ul>
<% } %>

<div>
    <p>Here you have your information</p>
</div>

<div id="register-forms">

    <form method="post" class="register" action="/account/updateInfo">
            <label class="require" for="account_firstname">First Name</label>
            <input 
                type="text"
                name="account_firstname" 
                id="account_firstname" 
                required 
                title="account_firstname"
                placeholder=""
                value="<%- user_name %>">

            <label class="require" for="account_lastname">Last Name</label>
            <input
                type="text"
                name="account_lastname"
                id="account_lastname"
                required
                title="account_lastname"
                value="<%- user_lname %>">
            
            <label class="require" for="account_email">Email</label>
            <input
                type="email"
                id="account_email"
                name="account_email"
                required
                title="account_email"
                value="<%- user_email %>">

            <input
            type="submit"
            id="button-submit"
            name="submit"
            value="Update General Info">

    </form>

</div>
